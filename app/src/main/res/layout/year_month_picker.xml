<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <NumberPicker
        android:id="@+id/picker_year"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginStart="91dp"
        app:layout_constraintRight_toLeftOf="@+id/picker_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/picker_month"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginEnd="91dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/picker_year"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="picker_year, picker_month" />

    <android.widget.Button
        android:id="@+id/cancle_btn"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:layout_marginEnd="20.5dp"
        android:background="@android:color/transparent"
        android:lineSpacingExtra="6sp"
        android:text="취소"
        android:textColor="#aaaaaa"
        android:textSize="13sp"
        app:layout_constraintRight_toLeftOf="@+id/confirm_btn"
        app:layout_constraintTop_toBottomOf="@+id/barrier" />

    <android.widget.Button
        android:id="@+id/confirm_btn"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:background="@android:color/transparent"
        android:lineSpacingExtra="6sp"
        android:text="확인"
        android:layout_marginEnd="5dp"
        android:textColor="#156fff"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier" />


</androidx.constraintlayout.widget.ConstraintLayout>
