<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberEvaluateFragment"
    android:paddingTop="36dp">


    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/member_info_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating" />



    <TextView
        android:id="@+id/ratingScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5 >"
        android:textSize="13sp"
        android:textColor="#b5b5b5"
        android:lineSpacingExtra="3sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        app:layout_constraintLeft_toRightOf="@+id/ratingBar" />


    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="@string/review"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/member_info_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />


    <TextView
        android:id="@+id/show_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체보기"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#aaaaaa"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <TextView
        android:id="@+id/review_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최고의 팀원입니다. 최고의 팀원입니다. 최고의 팀원입니다. 최고의 팀원입니다."
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#222222"
        android:lineSpacingExtra="5sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review" />


    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/badge"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/member_info_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_comment" />



    <ImageView
        android:id="@+id/best_badge_image"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/badge"/>

    <TextView
        android:id="@+id/best_badge_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 닉네임 님은 ‘배지명 1’을 가장 많이 받았어요!"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#262626"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_badge_image" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/badge_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/best_badge_text" />






</androidx.constraintlayout.widget.ConstraintLayout>