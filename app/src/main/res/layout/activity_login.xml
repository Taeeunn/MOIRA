    <android.widget.Button
        android:id="@+id/naver_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/naver_login"
        android:textAppearance="@style/login_button"
        android:background="@drawable/round_rectangle"
        android:backgroundTint="@color/naver"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="176.07dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <android.widget.Button
        android:id="@+id/kakao_login_btn"
        android:layout_width="match_parent"
