<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecruitDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/toolbar_theme_back">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/contest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:lineSpacingExtra="9sp"
                android:text="모집글 제목 모집글 제목"
                android:textAppearance="@style/contest_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/heart_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toLeftOf="@+id/share_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

            <ImageButton
                android:id="@+id/share_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="19dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_share_24" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="5dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="5sp"
                android:text="사용자 닉네임"
                android:textColor="#292929"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />


            <View
                android:id="@+id/vertical_line"
                android:layout_width="1dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="4.5dp"
                android:layout_marginTop="5dp"
                android:background="#d6d5d5"
                app:layout_constraintStart_toEndOf="@+id/nickname"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4.5dp"
                android:layout_marginTop="5dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="1sp"
                android:text="2021.01.12"
                android:textColor="#bcbcbc"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/vertical_line"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />

            <View
                android:id="@+id/vertical_line2"
                android:layout_width="1dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="4.5dp"
                android:layout_marginTop="5dp"
                android:background="#d6d5d5"
                app:layout_constraintStart_toEndOf="@+id/date"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />

            <ImageView
                android:id="@+id/view_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="4.5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_baseline_remove_red_eye_24"
                app:layout_constraintStart_toEndOf="@+id/vertical_line2"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />

            <TextView
                android:id="@+id/views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:layout_marginTop="5dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="1sp"
                android:text="1,234"
                android:textColor="#bcbcbc"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/view_icon"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />


            <ImageView
                android:id="@+id/recruit_image"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickname"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/contest_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="모집글 내용입니다. 모집글 내용입니다. 모집글 내용입니다. 모집글 내용입니다."
                android:textColor="#969696"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recruit_image" />

            <TextView
                android:id="@+id/related_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/related_tag"
                android:textAppearance="@style/related_tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contest_description" />


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:barrierMargin="10dp"
                app:constraint_referenced_ids="related_tag" />

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier1" />


            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintLeft_toRightOf="@+id/tag1"
                app:layout_constraintTop_toBottomOf="@id/barrier1" />


            <TextView
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintLeft_toRightOf="@+id/tag2"
                app:layout_constraintTop_toBottomOf="@id/barrier1" />


            <TextView
                android:id="@+id/tag4"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintLeft_toRightOf="@+id/tag3"
                app:layout_constraintTop_toBottomOf="@id/barrier1" />


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tag1, tag2, tag3, tag4" />


            <TextView
                android:id="@+id/tag5"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintRight_toLeftOf="@+id/tag6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier2" />


            <TextView
                android:id="@+id/tag6"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintLeft_toRightOf="@+id/tag5"
                app:layout_constraintTop_toBottomOf="@id/barrier2" />


            <TextView
                android:id="@+id/tag7"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintLeft_toRightOf="@+id/tag6"
                app:layout_constraintTop_toBottomOf="@id/barrier2" />


            <TextView
                android:id="@+id/tag8"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="#f2f2f2"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="관련태그"
                android:textAppearance="@style/favorite_tag"
                app:layout_constraintLeft_toRightOf="@+id/tag7"
                app:layout_constraintTop_toBottomOf="@id/barrier2" />


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:barrierDirection="bottom"

                app:constraint_referenced_ids="tag5, tag6, tag7, tag8" />


            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="16dp"
                android:background="#ededed"
                app:layout_constraintTop_toBottomOf="@+id/barrier3" />

            <include
                android:id="@+id/recruit_info"
                layout="@layout/recruit_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_line" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <android.widget.Button
        android:id="@+id/commentBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#c4c4c4"
        android:text="@string/write_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/applyBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/applyBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#989898"
        android:text="@string/apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/commentBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>


