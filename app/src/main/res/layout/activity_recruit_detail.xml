<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecruitDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/toolbar_theme_back">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/contest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:lineSpacingExtra="9sp"
                android:text="모집글 제목 모집글 제목"
                android:textAppearance="@style/contest_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="19dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:srcCompat="@drawable/ic_baseline_share_24" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="5dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="5sp"
                android:text="사용자 닉네임"
                android:textColor="#292929"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4.5dp"
                android:layout_marginTop="5dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="1sp"
                android:text="2021.01.12"
                android:textColor="#bcbcbc"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/nickname"
                app:layout_constraintTop_toBottomOf="@+id/contest_title" />

            <ImageView
                android:id="@+id/recruit_image"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginTop="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickname"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/contest_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="모집글 내용입니다. 모집글 내용입니다. 모집글 내용입니다. 모집글 내용입니다."
                android:textColor="#969696"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recruit_image" />

            <TextView
                android:id="@+id/related_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/related_tag"
                android:textAppearance="@style/related_tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contest_description" />

            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="40dp"
                android:background="#ededed"
                app:layout_constraintTop_toBottomOf="@+id/related_tag" />


            <TextView
                android:id="@+id/team_recruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="9sp"
                android:text="@string/recruit_info"
                android:textAppearance="@style/team_recruit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_line" />


            <TextView
                android:id="@+id/project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/project_type"
                android:textAppearance="@style/project_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/team_recruit" />


            <ImageView
                android:id="@+id/contest_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/project_type"
                app:srcCompat="@drawable/ic_launcher_background" />


            <TextView
                android:id="@+id/contest_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:text="공모전명 공모전명 공모전명 공모전명 공모전명 공모전명 공모전명"
                android:textAppearance="@style/contest_name"
                app:layout_constraintLeft_toRightOf="@+id/contest_image"
                app:layout_constraintRight_toLeftOf="@+id/move_to_contest"
                app:layout_constraintTop_toBottomOf="@+id/project_type" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5sp"
                android:text="주최기관"
                android:textColor="#969696"
                android:textSize="10sp"
                app:layout_constraintLeft_toRightOf="@+id/contest_image"
                app:layout_constraintRight_toLeftOf="@+id/move_to_contest"
                app:layout_constraintTop_toBottomOf="@+id/contest_name" />

            <ImageButton
                android:id="@+id/move_to_contest"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#b9b9b9"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/contest_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/contest_image"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />


            <View
                android:id="@+id/horizontal_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/contest_image" />


            <TextView
                android:id="@+id/recruit_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/recruit_position"
                android:textAppearance="@style/project_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_line2" />

            <View
                android:id="@+id/horizontal_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/recruit_position" />


            <TextView
                android:id="@+id/related_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/related_tag"
                android:textAppearance="@style/related_tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_line3" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/commentBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#c4c4c4"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="@string/write_comment"
        app:layout_constraintEnd_toStartOf="@+id/applyBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/applyBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#989898"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="@string/apply"
        app:layout_constraintStart_toEndOf="@+id/commentBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


